{{#if error}}
  <p>{{error}}</p>
{{/if}}
{{#if articles.length}}
  <hr>
  {{#each articles}}
    <h2><a href="/articles/{{urlTitle}}">{{title}}</a></h2>
    <h4>{{author}}</h4>
    <h4>{{body}}</h4>
    <hr>
  {{/each}}
{{else}}
  <p>There are no articles to display!</p>
{{/if}}
  <a href="/articles/new"><span>Post a new article.</span></a>